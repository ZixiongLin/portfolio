---
import { Image } from "astro:assets";
import Me from '../../public/assets/me.jpeg';
---

<section class="me">
    <div>
        <Image src={Me} alt="me" width={100} height={100} loading={"eager"}>
    </div>
    <div class="about__me">
        <h2>
            Zixiong Lin Yang
        </h2>
        <section class="chip">
            Web Developer
        </section>

        <a href="https://www.linkedin.com/in/zixiong-lin-yang-08a790158/">LinkedIn</a>

        <a href="https://github.com/ZixiongLin">Github</a>
    </div>
</section>

<style>
    section.me{
        border-radius: 10px;
        background-color: #4A5E6D;
        padding: 12px;
    }
    
    img{
        border-radius: 6px;
        width: 100%;
        height: fit-content;
        border: 2px solid #DAE1E7;
    }

    .about__me{
        margin-top: 8px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 8px;
        text-align: center;
    }

    h2{
        color: #fafafa;
        font-size: 16px;
        font-weight: bold;
    }
    .chip{
        background-color: #0d2b47;
        border-radius: 6px;
        padding: 6px;
        color: #fafafa;
    }
</style>