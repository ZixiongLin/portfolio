---
import { Image } from 'astro:assets';


    interface Props {
        src: string,
        alt:string,
        label:string,
    }
    const {
        src,
        alt,
        label
    } = Astro.props
---
<link rel="stylesheet" href="styles.css">

<div class="card">
    <Image src={src} alt={alt} width={24} height={24}  loading={"eager"}/>
    <p class="label">{label}</p>
</div>

<style>
    
div{
    padding: 8px;
    border: 1px solid #DAE1E7;
    border-radius: 4px;
    display: flex;
    gap: 8px;
    align-items: center;
}

img {
    width: 2rem;
    background-color: #fafafa;
    padding: 2px;
    border-radius: 2px;
}
p{
    color: #fafafa;
}

</style>